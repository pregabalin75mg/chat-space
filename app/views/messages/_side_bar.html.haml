.chat-side
  .side-bar
    .side-bar__NameBox
      .side-bar__NameBox__name  
        = current_user.name
      %ul.side-bar__NameBox__edit
        %li.side-bar__NameBox__edit-user
          = link_to new_group_path do
            = icon('far', 'edit')
        %li.side-bar__NameBox__edit-gear
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog')
        
  .side-group
    - current_user.groups.each do |group|
      = link_to group_messages_path(group) do
        .side-group__GroupName
          = group.name
        .side-group__GroupMessage
          = group.show_last_message
