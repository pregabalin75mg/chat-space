.chat-main
  .chat-main__header
    .chat-main__header__GroupName
      Test Group Name
      .chat-main__header__GroupName__MemberName
        Member: Test
    = link_to 'edit', root_path, class: ".chat-main__header__edit-btn"



  .chat-main__message
    .chat-main__message__user
      .chat-main__message__user__UserName testusername
      .chat-main__message__user__date 2020/4/26
    .chat-main__message__UserMessage hello

  .chat-main__form
    .chat-main__form__input-box
      %input{type: "text", placeholder: "type a message"}
      %label{class: "chat-main__form__input-box__image"}
        = icon('fas', 'image')
        %input{type: "file", class: "chat-main__form__input-box__image__file"}
    .chat-main__form__submit-btn 
      %input{type: "submit", value: "Send"}